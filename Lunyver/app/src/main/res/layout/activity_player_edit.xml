<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<!--        <Button
            android:id="@+id/button6"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/return_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />-->

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout6"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp">

            <ImageButton
                android:id="@+id/player_edit_race"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@null"
                android:scaleType="centerInside"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/player_edit_name"
                app:srcCompat="@drawable/race_fairy" />

            <Button
                android:id="@+id/player_edit_name"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="Pseudo"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/middle_titre"
                android:textStyle="bold"
                android:background="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/player_edit_but_reset"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/refresh"
                app:layout_constraintEnd_toStartOf="@+id/player_edit_class"
                app:layout_constraintTop_toTopOf="@+id/player_edit_class" />

            <ImageButton
                android:id="@+id/player_edit_class"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:scaleType="centerInside"
                android:padding="0dp"
                android:src="@drawable/class_thief"
                android:background="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/player_edit_race" />


            <Button
                android:id="@+id/player_edit_button_dead"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/sbire"
                app:layout_constraintStart_toEndOf="@+id/player_edit_class"
                app:layout_constraintTop_toTopOf="@+id/player_edit_class" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout5"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="8dp">

            <Button
                android:id="@+id/player_edit_but_up_attack"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/up_arrow"
                app:layout_constraintBottom_toTopOf="@+id/player_edit_attack"
                app:layout_constraintEnd_toEndOf="@+id/player_edit_attack"
                app:layout_constraintStart_toStartOf="@+id/player_edit_attack" />

            <Button
                android:id="@+id/player_edit_but_up_defense"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/up_arrow"
                app:layout_constraintBottom_toTopOf="@+id/player_edit_defense"
                app:layout_constraintEnd_toEndOf="@+id/player_edit_defense"
                app:layout_constraintStart_toStartOf="@+id/player_edit_defense" />

            <Button
                android:id="@+id/player_edit_but_up_life"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/up_arrow"
                app:layout_constraintBottom_toTopOf="@+id/player_edit_life"
                app:layout_constraintEnd_toEndOf="@+id/player_edit_life"
                app:layout_constraintStart_toStartOf="@+id/player_edit_life" />

            <Button
                android:id="@+id/player_edit_but_down_attack"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/down_arrow"
                app:layout_constraintEnd_toEndOf="@+id/player_edit_attack"
                app:layout_constraintStart_toStartOf="@+id/player_edit_attack"
                app:layout_constraintTop_toBottomOf="@+id/player_edit_attack" />

            <Button
                android:id="@+id/player_edit_but_down_defense"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/down_arrow"
                app:layout_constraintEnd_toEndOf="@+id/player_edit_defense"
                app:layout_constraintStart_toStartOf="@+id/player_edit_defense"
                app:layout_constraintTop_toBottomOf="@+id/player_edit_defense" />

            <Button
                android:id="@+id/player_edit_but_down_life"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/down_arrow"
                app:layout_constraintEnd_toEndOf="@+id/player_edit_life"
                app:layout_constraintStart_toStartOf="@+id/player_edit_life"
                app:layout_constraintTop_toBottomOf="@+id/player_edit_life" />

            <TextView
                android:id="@+id/player_edit_attack"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="20"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/big"
                android:textAlignment="center"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/player_edit_defense"
                app:layout_constraintEnd_toStartOf="@+id/player_edit_defense"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/player_edit_defense" />

            <TextView
                android:id="@+id/player_edit_defense"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="20"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/big"
                android:textAlignment="center"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/imageView7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/player_edit_life"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="20"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/big"
                android:textAlignment="center"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/player_edit_defense"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/player_edit_defense"
                app:layout_constraintTop_toTopOf="@+id/player_edit_defense" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="39dp"
                android:layout_height="38dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/player_edit_attack"
                app:layout_constraintStart_toStartOf="@+id/player_edit_attack"
                app:layout_constraintTop_toBottomOf="@+id/player_edit_but_down_attack"
                app:srcCompat="@drawable/sword" />


            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="39dp"
                android:layout_height="38dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/player_edit_life"
                app:layout_constraintStart_toStartOf="@+id/player_edit_life"
                app:layout_constraintTop_toBottomOf="@+id/player_edit_but_down_life"
                app:srcCompat="@drawable/heart" />


            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="39dp"
                android:layout_height="38dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/player_edit_defense"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintStart_toStartOf="@+id/player_edit_defense"
                app:srcCompat="@drawable/shield" />


        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout5"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout6"
            tools:layout_editor_absoluteX="12dp">

            <TextView
                android:id="@+id/player_edit_level"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="20"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/big"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                app:layout_constraintEnd_toEndOf="@+id/imageView4"
                app:layout_constraintStart_toStartOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="@+id/imageView4" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/player_edit_but_down_level"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/player_edit_but_up_level"
                app:srcCompat="@drawable/level" />

            <Button
                android:id="@+id/player_edit_but_up_level"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/up_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/player_edit_but_down_level"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/down_arrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>