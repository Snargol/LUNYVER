    <TextView
        android:id="@+id/pop_up_pseudo_boss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/boss"
        android:maxLength="10"
        android:textColor="@color/colorBlack"
        app:layout_constraintEnd_toEndOf="@+id/pop_up_image_boss"
        app:layout_constraintStart_toStartOf="@+id/pop_up_image_boss"
        app:layout_constraintTop_toBottomOf="@+id/pop_up_image_werewolf" />

    <Button
        android:id="@+id/pop_up_but_annul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorRed"
        android:text="@string/annul"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/pop_up_image_mob"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toEndOf="@+id/pop_up_image_mob"
        app:layout_constraintTop_toBottomOf="@+id/pop_up_image_mob"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/pop_up_but_valid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorGreen"
        android:text="@string/valid"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pop_up_image_boss"
        app:layout_constraintStart_toStartOf="@+id/pop_up_image_boss"
        app:layout_constraintTop_toBottomOf="@+id/pop_up_image_boss" />

    <ImageView
        android:id="@+id/pop_up_centaur_valid"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginTop="2dp"
        android:scaleType="fitXY"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/pop_up_image_centaur"
        app:layout_constraintEnd_toEndOf="@+id/pop_up_image_centaur"
        app:layout_constraintStart_toStartOf="@+id/pop_up_image_centaur"
        app:layout_constraintTop_toTopOf="@+id/pop_up_pseudo_centaur"
        app:srcCompat="@drawable/green_border"
        android:contentDescription="Green Frame" />

    <ImageView
        android:id="@+id/pop_up_elf_valid"
        android:layout_width="80dp"
        android:layout_height="85dp"
