        app:srcCompat="@drawable/green_border" />

    <ImageView
        android:id="@+id/pop_up_mob_valid"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="Green Frame"
        android:visibility="invisible"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/pop_up_image_mob"
        app:layout_constraintEnd_toEndOf="@+id/pop_up_image_mob"
        app:layout_constraintStart_toStartOf="@+id/pop_up_image_mob"
        app:layout_constraintTop_toTopOf="@+id/pop_up_pseudo_mob"
        app:srcCompat="@drawable/green_border" />

    <ImageView
        android:id="@+id/pop_up_boss_valid"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginTop="8dp"
        android:contentDescription="Green Frame"
        android:visibility="invisible"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/pop_up_image_boss"
        app:layout_constraintEnd_toEndOf="@+id/pop_up_image_boss"
        app:layout_constraintStart_toStartOf="@+id/pop_up_image_boss"
