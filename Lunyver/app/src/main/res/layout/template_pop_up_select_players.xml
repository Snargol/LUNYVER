        android:visibility="invisible"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/pop_up_image_troll"
        app:layout_constraintEnd_toEndOf="@+id/pop_up_image_troll"
        app:layout_constraintStart_toStartOf="@+id/pop_up_image_troll"
        app:srcCompat="@drawable/green_border" />

    <ImageView
        android:id="@+id/pop_up_gnome_valid"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="Green Frame"
        android:visibility="invisible"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/pop_up_image_gnome"
        app:layout_constraintEnd_toEndOf="@+id/pop_up_image_gnome"
        app:layout_constraintStart_toStartOf="@+id/pop_up_image_gnome"
        app:layout_constraintTop_toTopOf="@+id/pop_up_pseudo_gnome"
        app:srcCompat="@drawable/green_border" />

    <ImageView
        android:id="@+id/pop_up_werewolf_valid"
        android:layout_width="80dp"
        android:layout_height="85dp"
        android:layout_marginTop="8dp"
        android:contentDescription="Green Frame"
