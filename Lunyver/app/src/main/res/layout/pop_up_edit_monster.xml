<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_width="400dp"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.227"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/pop_up_edit_mob_but_up_attack"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/up_arrow"
            app:layout_constraintBottom_toTopOf="@+id/pop_up_edit_mob_attack"
            app:layout_constraintEnd_toEndOf="@+id/pop_up_edit_mob_attack"
            app:layout_constraintStart_toStartOf="@+id/pop_up_edit_mob_attack" />

        <Button
            android:id="@+id/pop_up_edit_mob_but_up_defense"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/up_arrow"
            app:layout_constraintBottom_toTopOf="@+id/pop_up_edit_mob_defense"
            app:layout_constraintEnd_toEndOf="@+id/pop_up_edit_mob_defense"
            app:layout_constraintStart_toStartOf="@+id/pop_up_edit_mob_defense" />

        <Button
            android:id="@+id/pop_up_edit_mob_but_up_life"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/up_arrow"
            app:layout_constraintBottom_toTopOf="@+id/pop_up_edit_mob_life"
            app:layout_constraintEnd_toEndOf="@+id/pop_up_edit_mob_life"
            app:layout_constraintStart_toStartOf="@+id/pop_up_edit_mob_life" />

        <Button
            android:id="@+id/pop_up_edit_mob_but_down_attack"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/down_arrow"
            app:layout_constraintEnd_toEndOf="@+id/pop_up_edit_mob_attack"
            app:layout_constraintStart_toStartOf="@+id/pop_up_edit_mob_attack"
            app:layout_constraintTop_toBottomOf="@+id/pop_up_edit_mob_attack" />

        <Button
            android:id="@+id/pop_up_edit_mob_but_down_defense"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/down_arrow"
            app:layout_constraintEnd_toEndOf="@+id/pop_up_edit_mob_defense"
            app:layout_constraintStart_toStartOf="@+id/pop_up_edit_mob_defense"
            app:layout_constraintTop_toBottomOf="@+id/pop_up_edit_mob_defense" />

        <Button
            android:id="@+id/pop_up_edit_mob_but_down_life"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/down_arrow"
            app:layout_constraintEnd_toEndOf="@+id/pop_up_edit_mob_life"
            app:layout_constraintStart_toStartOf="@+id/pop_up_edit_mob_life"
            app:layout_constraintTop_toBottomOf="@+id/pop_up_edit_mob_life" />

        <TextView
            android:id="@+id/pop_up_edit_mob_attack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="20"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/big"
            app:layout_constraintBottom_toBottomOf="@+id/pop_up_edit_mob_defense"
            app:layout_constraintEnd_toStartOf="@+id/pop_up_edit_mob_defense"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/pop_up_edit_mob_defense" />

        <TextView
            android:id="@+id/pop_up_edit_mob_defense"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="20"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/big"
            app:layout_constraintBottom_toTopOf="@+id/imageView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pop_up_edit_mob_life"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="20"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/big"
            app:layout_constraintBottom_toBottomOf="@+id/pop_up_edit_mob_defense"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/pop_up_edit_mob_defense"
            app:layout_constraintTop_toTopOf="@+id/pop_up_edit_mob_defense" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="39dp"
            android:layout_height="38dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/pop_up_edit_mob_attack"
            app:layout_constraintStart_toStartOf="@+id/pop_up_edit_mob_attack"
            app:layout_constraintTop_toBottomOf="@+id/pop_up_edit_mob_but_down_attack"
            app:srcCompat="@drawable/sword" />


        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="39dp"
            android:layout_height="38dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/pop_up_edit_mob_life"
            app:layout_constraintStart_toStartOf="@+id/pop_up_edit_mob_life"
            app:layout_constraintTop_toBottomOf="@+id/pop_up_edit_mob_but_down_life"
            app:srcCompat="@drawable/heart" />


        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="39dp"
            android:layout_height="38dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/pop_up_edit_mob_defense"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toStartOf="@+id/pop_up_edit_mob_defense"
            app:srcCompat="@drawable/shield" />

    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Snargol"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/middle_titre"
        android:textStyle="bold"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/mob" />


    <Button
        android:id="@+id/pop_up_edit_mob_confirm_but_annul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorRed"
        android:text="@string/annul"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout5"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/pop_up_edit_mob_confirm_but_valid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorGreen"
        android:text="@string/valid"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout5" />

</android.support.constraint.ConstraintLayout>