<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    tools:layout_editor_absoluteX="6dp"
    tools:layout_editor_absoluteY="266dp">

    <ImageButton
        android:id="@+id/pop_up_race_but_centaur"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@null"
        android:padding="0dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/pop_up_race_but_gnome"
        app:layout_constraintEnd_toStartOf="@+id/pop_up_race_but_gnome"
        app:layout_constraintTop_toTopOf="@+id/pop_up_race_but_gnome"
        app:srcCompat="@drawable/race_centaur" />

    <ImageButton
        android:id="@+id/pop_up_race_but_elf"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:background="@null"
        android:padding="0dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/pop_up_race_but_fairy"
        app:layout_constraintStart_toEndOf="@+id/pop_up_race_but_fairy"
        app:layout_constraintTop_toTopOf="@+id/pop_up_race_but_fairy"
        app:srcCompat="@drawable/race_elf" />

    <ImageButton
        android:id="@+id/pop_up_race_but_fairy"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="32dp"
        android:background="@null"
        android:padding="0dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@+id/imageView13"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/race_fairy" />

    <ImageButton
        android:id="@+id/pop_up_race_but_gnome"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@null"
        android:padding="0dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/pop_up_race_but_werewolf"
        app:layout_constraintEnd_toStartOf="@+id/pop_up_race_but_werewolf"
        app:layout_constraintTop_toTopOf="@+id/pop_up_race_but_werewolf"
        app:srcCompat="@drawable/race_gnome" />

    <ImageButton
        android:id="@+id/pop_up_race_but_troll"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:background="@null"
        android:padding="0dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/pop_up_race_but_elf"
        app:layout_constraintStart_toEndOf="@+id/pop_up_race_but_elf"
        app:layout_constraintTop_toTopOf="@+id/pop_up_race_but_elf"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/race_troll" />

    <ImageButton
        android:id="@+id/pop_up_race_but_werewolf"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="32dp"
        android:background="@null"
        android:padding="0dp"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toStartOf="@+id/imageView13"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/race_werewolf" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/chose_race"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/little_titre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pop_up_race_but_annul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorRed"
        android:text="@string/annul"
        app:layout_constraintEnd_toEndOf="@+id/pop_up_race_but_werewolf"
        app:layout_constraintTop_toBottomOf="@+id/pop_up_race_but_gnome" />

    <Button
        android:id="@+id/pop_up_race_but_valid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorGreen"
        android:text="@string/valid"
        app:layout_constraintStart_toStartOf="@+id/pop_up_race_but_fairy"
        app:layout_constraintTop_toBottomOf="@+id/pop_up_race_but_elf" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/button_param" />


    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/pop_up_race_but_annul"
        app:layout_constraintEnd_toStartOf="@+id/pop_up_race_but_valid"
        app:layout_constraintStart_toEndOf="@+id/pop_up_race_but_annul"
        app:layout_constraintTop_toBottomOf="@+id/pop_up_race_but_valid"
        app:srcCompat="@drawable/button_param" />


    <ImageView
        android:id="@+id/pop_up_race_but_centaur_valid"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/pop_up_race_but_centaur"
        app:layout_constraintEnd_toEndOf="@+id/pop_up_race_but_centaur"
        app:layout_constraintStart_toStartOf="@+id/pop_up_race_but_centaur"
        app:layout_constraintTop_toTopOf="@+id/pop_up_race_but_centaur"
        app:srcCompat="@drawable/green_border" />

    <ImageView
        android:id="@+id/pop_up_race_but_troll_valid"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/pop_up_race_but_troll"
        app:layout_constraintEnd_toEndOf="@+id/pop_up_race_but_troll"
        app:layout_constraintStart_toStartOf="@+id/pop_up_race_but_troll"
        app:layout_constraintTop_toTopOf="@+id/pop_up_race_but_troll"
        app:srcCompat="@drawable/green_border" />

    <ImageView
        android:id="@+id/pop_up_race_but_elf_valid"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/pop_up_race_but_elf"
        app:layout_constraintEnd_toEndOf="@+id/pop_up_race_but_elf"
        app:layout_constraintStart_toStartOf="@+id/pop_up_race_but_elf"
        app:layout_constraintTop_toTopOf="@+id/pop_up_race_but_elf"
        app:srcCompat="@drawable/green_border" />

    <ImageView
        android:id="@+id/pop_up_race_but_fairy_valid"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/pop_up_race_but_fairy"
        app:layout_constraintEnd_toEndOf="@+id/pop_up_race_but_fairy"
        app:layout_constraintStart_toStartOf="@+id/pop_up_race_but_fairy"
        app:layout_constraintTop_toTopOf="@+id/pop_up_race_but_fairy"
        app:srcCompat="@drawable/green_border" />

    <ImageView
        android:id="@+id/pop_up_race_but_werewolf_valid"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/pop_up_race_but_werewolf"
        app:layout_constraintEnd_toEndOf="@+id/pop_up_race_but_werewolf"
        app:layout_constraintStart_toStartOf="@+id/pop_up_race_but_werewolf"
        app:layout_constraintTop_toTopOf="@+id/pop_up_race_but_werewolf"
        app:srcCompat="@drawable/green_border" />

    <ImageView
        android:id="@+id/pop_up_race_but_gnome_valid"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/pop_up_race_but_gnome"
        app:layout_constraintEnd_toEndOf="@+id/pop_up_race_but_gnome"
        app:layout_constraintStart_toStartOf="@+id/pop_up_race_but_gnome"
        app:layout_constraintTop_toTopOf="@+id/pop_up_race_but_gnome"
        app:srcCompat="@drawable/green_border" />


</android.support.constraint.ConstraintLayout>